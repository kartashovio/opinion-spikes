OPINION_API_KEY=API_KEY
OPINION_API_BASE=API_BASE
TELEGRAM_BOT_TOKEN=BOT_TOKEN
TELEGRAM_CHAT_ID=CHAT_ID
OPINION_PUBLIC_API_BASE=https://proxy.opinion.trade:8443/api/bsc/api
OPINION_PUBLIC_ORDERBOOK_ENDPOINT=/v2/order/market/depth
OPINION_TOPICS_ENDPOINT=/v2/topic
OPINION_HTTP_TIMEOUT_MS=60000
OPINION_PUBLIC_TOPIC_PAGE_WORKERS=16
OPINION_PUBLIC_TOPIC_PAGE_SIZE=100
OPINION_PUBLIC_TOPIC_DETAIL_NOT_FOUND_STOP=5
OPINION_PUBLIC_TOPIC_MULTI_NOT_FOUND_STOP=5
OPINION_ALERT_TITLE_BLOCKLIST=up or down,What price will
OPINION_ALERT_TITLE_BLOCKLIST_REGEX=.*_above.*on
OPINION_LOG_TICK_DETAILS=1
OPINION_LOG_VOLUME_DEBUG=1

# Adaptive spike filtering (default: enabled)
OPINION_USE_ADAPTIVE_THRESHOLDS=1

# Minimum absolute price change for extreme zones (<20% or >80%)
OPINION_EXTREME_ZONE_MIN_CHANGE=0.05

# Minimum absolute price change for middle zone (20-80%)
OPINION_MIDDLE_ZONE_MIN_CHANGE=0.04

# High volume threshold (delta volume) for threshold exception
OPINION_HIGH_VOLUME_THRESHOLD=1500000

# Minimum change when high volume detected
OPINION_HIGH_VOLUME_MIN_CHANGE=0.035

# Volume boost multiplier (higher = more weight to volume)
OPINION_VOLUME_BOOST_MULTIPLIER=0.40